    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/ic_back_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/lock_immediately_after_locking_the_screen"
            android:textColor="#2c2c2c"
            android:textSize="14sp"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/checkbox_lock_screen_switch_on_phone_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_show_indicator="false"
            app:sb_uncheck_color="#EFEFF0"
            app:sb_background="@color/switch_background"
            app:sb_checked_color="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            app:track="@drawable/custom_track"
            android:thumb="@drawable/custom_thumb"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#DEDEDE"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/ic_back_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/intruder_selfie"
            android:textColor="#2c2c2c"
            android:textSize="14sp"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/checkbox_intruder_selfie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_show_indicator="false"
            app:sb_uncheck_color="#EFEFF0"
            app:sb_background="@color/switch_background"
            app:sb_checked_color="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            app:track="@drawable/custom_track"
            android:thumb="@drawable/custom_thumb"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#DEDEDE"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/ic_back_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/hide_pattern"
            android:textColor="#2c2c2c"
            android:textSize="14sp"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/checkbox_show_hide_pattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_show_indicator="false"
            app:sb_uncheck_color="#EFEFF0"
            app:sb_background="@color/switch_background"
            app:sb_checked_color="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            app:track="@drawable/custom_track"
            android:thumb="@drawable/custom_thumb"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#DEDEDE"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/ic_back_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/vibrate"
            android:textColor="#2c2c2c"
            android:textSize="14sp"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/checkbox_vibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:sb_show_indicator="false"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"


            app:sb_uncheck_color="#EFEFF0"
            app:sb_background="@color/switch_background"
            app:sb_checked_color="@color/colorPrimary" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#DEDEDE"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/ic_back_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/lock_settings"
            android:textColor="#2c2c2c"
            android:textSize="14sp"/>


        <ImageView
            android:id="@+id/lock_when"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_more"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingVertical="@dimen/_15sdp"
            android:layout_alignParentRight="true"/>




        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#DEDEDE"/>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/btn_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/ic_back_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/change_the_password"
            android:textColor="#2c2c2c"
            android:textSize="14sp"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tooltipText="After locking the screen"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_more"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingVertical="@dimen/_15sdp"
            android:layout_alignParentRight="true"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#DEDEDE"
            android:textColor="#2c2c2c"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/about_me"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/ic_back_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/about_me"
            android:textColor="#2c2c2c"
            android:textSize="14sp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_more"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingVertical="@dimen/_15sdp"
            android:layout_alignParentRight="true"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#DEDEDE"
            android:textColor="#2c2c2c"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/line_color"/>


</LinearLayout>